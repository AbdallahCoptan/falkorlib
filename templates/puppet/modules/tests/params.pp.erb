include '<%= config[:shortname] %>::params'

$names = [
          "ensure",
          "protocol",
          "port"
          "packagename"
          "logdir",
          "logdir_mode",
          "logdir_owner",
          "logdir_group",
          "servicename",
          "processname",
          "hasstatus",
          "hasrestart",
          "configfile",
          "configfile_init",
          "configfile_mode",
          "configfile_owner",
          "configfile_group",
          ]

each($names) |$v| {
    $var = "<%= config[:shortname] %>::params::${v}"
    notice("${var} = ", inline_template('< %= scope.lookupvar(@var) %>'))
}
