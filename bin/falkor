require "thor/error"
require "thor/actions"
require 'falkorlib/cli'

begin
  FalkorLib::CLI::App.start(ARGV, :debug => true)
rescue Thor::InvocationError => e
  error e.message.gsub(/^ERROR:/, '')
end


